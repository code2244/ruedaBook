<%- include('partials/header') -%>
 <div class="d-flex align-items-center justify-content-center my-3">
      <a class="btn btn-primary" href="/profile">Profile</a>
  </div>
  <div class="d-flex align-items-center justify-content-center my-3">
      <a class="btn btn-primary" href="/todos">Available CLasses</a>
  </div>  
<div class="my-5">
  <div class="row mx-auto align-items-center justify-content-center">
    <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="card col-8 col-lg-4 col-xl-3 align-items-center p-2 mx-auto">
          <div class="card row justify-content-center">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid mx-auto d-block" src="<%= posts[i].image%>">
            </a>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
</div>  
