<%- include('partials/header') -%>
<section p-5>
  <div class="container">

    <div class="d-flex align-items-center justify-content-center m-2">
      <div class="card w-50 ">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="imgs/profilepic.jpg" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Profile</h5>
              <div>
                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a href="/logout" class="btn btn-primary">Logout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

      <div class="d-flex align-items-center justify-content-center my-3">
      <div class="card w-50 p-3 ">
        <h2>Class Available</h2>
        
      </div>
    </div>
    
    
    
    <div class="d-flex align-items-center justify-content-center my-3">
      <div class="card w-50 p-3 ">
        <h2>Add a post</h2>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label">Caption</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center my-3">
    <div class="my-3">
      <ul class="row align-items-center justify-content-center list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-8 col-lg-4 col-xl-3 my-2">
            <div class="card">
              <a href="/post/<%= posts[i]._id%>">
                <img class="img-fluid mx-auto d-block" src="<%= posts[i].image%>">
              </a>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center my-3">
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div> 
    <div class="d-flex align-items-center justify-content-center my-3">
      <a class="btn btn-primary" href="/todos">Return to Available Classes</a>
    </div>
    
  </div>
</section>
<%- include('partials/footer') -%>

  
    
    
    
    
    
    
      
    
    
    
    
    
    
    
      
    
    
    
  
  
  
  
  
  
  
  
  
  
  
  
      
  
        
      

      
         