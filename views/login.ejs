<%- include('partials/header') -%>

<main class="form-signin w-100 m-auto">

  <div class="row align-items-center justify-content-center w-75 m-auto">

    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">

        <div class="form-floating">
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
        </div>

        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
          <label for="exampleInputPassword1" class="form-label">Password</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">Sign in</button>

      </form>
    </section>

  </div>

</main>

<%- include('partials/footer') -%>
